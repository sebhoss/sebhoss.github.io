---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  
 <title>{{ site.title }} - {{ page.tag }}</title>
 <link href="{{ site.author.url }}/{{ page.url }}" rel="self"/>
 <link href="{{ site.author.url }}/tag/{{ page.tag }}.html"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://sebhoss.github.com/tag/{{ page.tag }}.html</id>
 <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
 </author>

 {% for post in page.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="{{ site.author.url }}/{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.author.url }}/{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
</feed>